terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.16"
    }
  }

  required_version = ">= 1.2.0"
}

provider "aws" {
  region = "us-west-2"
}

resource "aws_instance" "app_server" {
  ami           = "ami-830c94e3"
  instance_type = "t2.micro"

  user_data = <<EOF
#!/bin/bash

apt-get update
apt-get install docker-ce docker-ce-cli containerd.io docker-compose-plugin

docker run hello-world
EOF
}
